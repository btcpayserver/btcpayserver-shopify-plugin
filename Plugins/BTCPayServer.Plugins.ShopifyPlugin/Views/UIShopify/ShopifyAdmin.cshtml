@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Abstractions.TagHelpers
@using BTCPayServer.Plugins.ShopifyPlugin
@using BTCPayServer.Plugins.ShopifyPlugin.ViewModels
@using BTCPayServer.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Routing
@model ShopifySettingsViewModel
@{
    var storeId = (string)this.Context.GetRouteValue("storeId");
    var url = this.Url.ActionAbsolute(Context.Request, nameof(UIShopifyV2Controller.Settings), new { storeId = storeId }).AbsoluteUri;
    Layout = "_LayoutWizard";
}
<header class="text-center">
    <h1>Shopify Plugin for BTCPay Server</h1>
    <p class="lead text-secondary mt-3"> Your BTCPay Server-Shopify installation was successful! </p>
    <p class="mt-3">
        <span>To start accepting payments, make sure to customize your store by adding the UI Extension to the "Thank You" page. Follow the <a href="https://docs.btcpayserver.org/ShopifyV2/" rel="noreferrer noopener" target="_blank">documentation</a> on how to go about this</span>
    </p>
</header>
